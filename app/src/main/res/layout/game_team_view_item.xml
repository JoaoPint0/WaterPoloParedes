<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">

    <ImageView android:id="@+id/home_coach_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:visibility="gone"
               android:src="@drawable/ic_people"/>

    <TextView android:id="@+id/home_player_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:textSize="16sp"
              android:textStyle="bold"
              android:textColor="@color/colorPrimaryDark"
              tools:text="1"/>

    <TextView android:id="@+id/home_player_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              tools:text="Joao Pinto"/>

    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_margin="8dp"
          android:layout_weight="1"/>

    <TextView android:id="@+id/away_player_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              tools:text="Joao Primavera"/>

    <TextView android:id="@+id/away_player_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:textSize="16sp"
              android:textStyle="bold"
              android:textColor="@color/colorPrimaryDark"
              tools:text="1"/>


    <ImageView android:id="@+id/away_coach_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:visibility="gone"
               android:src="@drawable/ic_people"/>

</LinearLayout>